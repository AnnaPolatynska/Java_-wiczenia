package Wyjatki;

import java.util.InputMismatchException;
import java.util.Scanner;

/*Napisz program pobieraj¹cy od u¿ytkownika liczbê. 
 * Je¿eli u¿ytkownik wpisze znak w miejsce liczby program powinien obd³u¿yæ wyj¹tek i wykonaæ siê ponownie oraz poprosiæ 
 * o poprawne wpisanie wartoœci.  
*/
public class J91 {

	
	Scanner sc = new Scanner(System.in);
	int number= 0;
	boolean error = true;
	
	while(error){
		System.out.println("podaj liczbê ca³kowit¹ lub zakoñcz Q ");
		try{
		number=sc.nextInt();
		System.out.println("poda³eœ liczbê "+ number);
		error=false;
		
		//Q nie jest liczb¹ ale ma j¹ przyj¹æ
		if(sc.hasNext("Q")){
			break;
				}catch (InputMismatchException e){
			System.out.println("nie poda³eœ liczby ca³kowitej. Popraw wartoœæ ");
		}
		
		sc.close();
	
		}
	}
}
