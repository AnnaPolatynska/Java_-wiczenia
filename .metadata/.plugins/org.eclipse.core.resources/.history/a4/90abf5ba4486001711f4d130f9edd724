package pliki;

import java.io.File;
import java.io.FileNotFoundException;
import java.io.PrintWriter;
import java.util.Scanner;

public class plik1 {

	public static void main(String[] arg) throws FileNotFoundException{
		//odczyt
		File plik = new File("Plik1.txt"); //plik 
		Scanner odczyt = new Scanner(plik);
		String text1 = odczyt.nextLine(); //odczyta tylko 1 liniê tekstu do znaku bia³ego
		System.out.println(text1);
		String text2 = odczyt.nextLine();
		System.out.println(text2);
		odczyt.close();
		
		//zapis do pliku
		PrintWriter zapis = new PrintWriter("Plik1.txt");
		zapis.println("zawartoœæ zapisu");
		
		zapis.close();
	}
	
}
