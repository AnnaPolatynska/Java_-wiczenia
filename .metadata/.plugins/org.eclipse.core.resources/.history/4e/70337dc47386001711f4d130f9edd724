package Wyjatki;

import java.util.Scanner;

/*Napisz program pobieraj¹cy od u¿ytkownika liczbê. 
 * Je¿eli u¿ytkownik wpisze znak w miejsce liczby program powinien obd³u¿yæ wyj¹tek i wykonaæ siê ponownie oraz poprosiæ 
 * o poprawne wpisanie wartoœci.  
*/
public class J91 {

	
	Scanner sc = new Scanner(System.in);
	int number= 0;
	boolean error= true;
	
	while(error){
		System.out.println("podaj liczbê ca³kowit¹ lub zakoñcz Q ");
	
	number=sc.nextInt;
	System.out.println("poda³eœ liczbê "+ number);
	}
	sc.close();
	
	
	
	
	
	private class MyException1 extends Exception{}
	private class MyException2 extends Exception{}


	public void losuj() throws MyException1, MyException2, MyExceptions{
		Random r= new Random();
		switch(r.nextInt(3)){	//chcê wylosowaæ 1 z 3 opcji
		
		case 0:
			throw new MyException1();
											// wywo³anie konstruktora klasy MyException1
		case 1:
			throw new MyException2();
		case 2:
			throw new MyExceptions();
		}
	}
		
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		J90 test1= new J90();				//wywo³ujê na konstruktorze domyœlnym
		try{
			test1.losuj();     				//losowanie wyj¹tku
		}catch (MyException1 e){
			System.out.println("Z³apano wyj¹tek 1 klasy: " + e.getClass());
		}catch (MyException2 e){
			System.out.println("Z³apano wyj¹tek 2 klasy: "+ e.getClass());
		}catch (MyExceptions e){
				System.out.println("Z³apano wyj¹tek 3 klasy: "+ e.getClass());
		}
				// zwraca pakiet/ klasê i numer wyj¹tku = class Wyjatki.J90$MyException2

	}
}
	
	
	
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

