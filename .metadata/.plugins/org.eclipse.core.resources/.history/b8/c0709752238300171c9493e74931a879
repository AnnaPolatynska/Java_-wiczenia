		//-------------------------------------------------------------------------------------wzór
		
		
		Scanner rl = new Scanner(System.in);
		Scanner xl = new Scanner(System.in);
		HashMap<String, Double> mapa = new HashMap<String, Double>();
		ArrayList<String> lista = new ArrayList<String>();
		mapa.put("chleb", 1.23);
		mapa.put("mleko", 2.99);
		mapa.put("jaja", 3.99);
		mapa.put("m¹ka", 2.20);
		mapa.put("cukier", 3.69);
		mapa.put("bu³ki", 0.99);
		mapa.put("pomidory", 13.30);
		mapa.put("woda", 1.99);
		mapa.put("pomarañcze", 19.40);
		mapa.put("ser", 21.90);
		
		float sum = 0;
		System.out.println("Podaj nazwê produktu: ");
		String rr = rl.nextLine();		
		while( (!rr.equals("end")) && (!rr.equals("END")) ){
			if(mapa.containsKey(rr) && !lista.contains(rr)){
				sum += mapa.get(rr);
				lista.add(rr);
			} else if(mapa.containsKey(rr) && lista.contains(rr)){
				System.out.println("Czy na pewno chcesz dodaæ ten produkt(t/n)?: "); //====== je¿eli 2X wpiszê jedno to pyta czy to pomy³ka
				String xx = xl.nextLine();
				if (xx.equals("t")){
					sum += mapa.get(rr);
					lista.add(rr);	
				}
			} else {
				System.out.println("Z³a nazwa produktu: ");
			}
			rr = rl.nextLine();
		}
		System.out.println("Cena za twoje zakupy: " + sum + "z³");
		rl.close();
		xl.close();
		
	}

