package TrzeciaPaczka;

import java.util.Scanner;
//J33
/*Napisz program który pobiera od u¿ytkownika napis i liczbê 
  nastêpnie wyœwietla znaki z podanego napisu co podan¹ liczbê. */
public class J33 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		//pobiera napis i liczbê i wyœwietla litery z napisu co podan¹ iloœc liter / wzór M
		
		
			Scanner sc = new Scanner(System.in);
			System.out.print("Podaj liczbê: ");
			int number = sc.nextInt();
			sc.nextLine();
			System.out.print("Podaj napis: ");
			String txt  = sc.nextLine();

			for(int i = 0; i<=txt.length()-1; i = i + number ){		
				System.out.print(txt.charAt(i));
			}
			sc.close();
		
			
		
	}

}
